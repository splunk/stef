	}

	i := 0

	// Copy elements in the part of the array that already had the necessary room.
	for ; i < minLen; i++ {
		{{- if .ElemType.MustClone}}
		if src.elems[i].canBeShared() {
			if src.elems[i].computeDiff({{if not .IsStructType}}&{{end}}dst.elems[i]) {
