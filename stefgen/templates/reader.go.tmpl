	for r.base.FrameRecordCount == 0 {
		if err := r.nextFrame(); err != nil {
			return nil, err
		}
	}
	r.base.FrameRecordCount--
	r.base.RecordCount++
	err := r.decoder.Decode(r.recordPtr)
	return r.recordPtr, err
}

